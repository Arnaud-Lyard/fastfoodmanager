{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "dev": "ts-node-dev src/infrastructure/express/server.ts",
    "start": "NODE_ENV=production node dist/infrastructure/express/server.js",
    "build": "rm -R dist ; babel src --extensions \".ts,.js\" --out-dir dist --copy-files --no-copy-ignored",
    "buildAndStart": "npm run build && NODE_ENV=production npm start",
    "test": "NODE_ENV=test jest --bail --runInBand --silent",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "test:watchAll": "npm test -- --watchAll",
    "test:watchUnit": "npm run test:watch -- --testMatch \"**/?*.spec.ts?(x)\"",
    "test:watchIntegration": "npm run test:watch -- --testMatch \"**/?*.test.ts?(x)\"",
    "lint:log": "eslint 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts' --fix --max-warnings 0",
    "lint:ts": "tsc --noEmit",
    "pre:commit": "npm run test:coverage && npm run lint && npm run lint:ts && npm run build",
    "migrate:test": "dotenv -e .env.test prisma migrate dev",
    "migrate:dev": "dotenv -e .env prisma migrate dev",
    "migrate:reset:dev": "dotenv -e .env prisma migrate reset",
    "migrate:reset:test": "dotenv -e .env.test prisma migrate reset",
    "generate": "prisma generate",
    "database:up": "docker compose up -d",
    "database:down": "docker compose down",
    "docker:dropAll": "docker stop $(docker ps -a -q) && docker system prune -f"
  },
  "prisma": {
    "schema": "src/infrastructure/prisma/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "5.7.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "sanitize-html": "^2.11.0",
    "validator": "^13.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.5",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.2",
    "@types/sanitize-html": "^2.9.5",
    "@types/supertest": "^2.0.16",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "git-commit-msg-linter": "^5.0.4",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
